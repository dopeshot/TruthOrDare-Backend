{
    "name": "truth-or-dare",
    "version": "0.0.1",
    "description": "",
    "author": "",
    "private": true,
    "license": "UNLICENSED",
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start": "nest start",
        "start:dev": "nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./jest-e2e.json --runInBand",
        "seed": "node dist/seeder",
        "seed:refresh": "cross-env NODE_OPTIONS=--max-old-space-size=8192 node dist/seeder --refresh",
        "prepare": "husky install"
    },
    "dependencies": {
        "@nestjs/common": "^8.2.5",
        "@nestjs/config": "^1.1.6",
        "@nestjs/core": "^8.2.5",
        "@nestjs/jwt": "^8.0.0",
        "@nestjs/mapped-types": "^1.0.1",
        "@nestjs/mongoose": "^9.0.2",
        "@nestjs/passport": "^8.1.0",
        "@nestjs/platform-express": "^8.2.5",
        "@nestjs/swagger": "^5.1.5",
        "@nestjs/throttler": "^3.0.0",
        "@types/bcryptjs": "^2.4.2",
        "@types/faker": "^6.6.9",
        "bcryptjs": "^2.4.3",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.13.1",
        "dotenv": "^16.0.2",
        "ejs": "^3.1.8",
        "googleapis": "^92.0.0",
        "mongodb-memory-server": "^8.1.0",
        "mongoose": "^6.1.6",
        "nestjs-seeder": "^0.2.0",
        "nodemailer": "^6.7.8",
        "nodemailer-mock": "^1.5.11",
        "passport": "^0.5.2",
        "passport-google-oauth20": "^2.0.0",
        "passport-jwt": "^4.0.0",
        "passport-local": "^1.0.0",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^3.0.2",
        "rxjs": "^7.5.6",
        "slugify": "^1.6.5",
        "swagger-ui-express": "^4.5.0"
    },
    "devDependencies": {
        "@nestjs/cli": "^8.2.0",
        "@nestjs/schematics": "^8.0.5",
        "@nestjs/testing": "^8.2.5",
        "@types/express": "^4.17.13",
        "@types/jest": "^27.4.0",
        "@types/node": "^17.0.8",
        "@types/passport-google-oauth20": "^2.0.11",
        "@types/passport-jwt": "^3.0.6",
        "@types/passport-local": "^1.0.34",
        "@types/supertest": "^2.0.12",
        "@typescript-eslint/eslint-plugin": "^5.9.1",
        "@typescript-eslint/parser": "^5.36.2",
        "eslint": "^8.6.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-nestjs": "^1.2.3",
        "eslint-plugin-prettier": "^4.2.1",
        "husky": "^7.0.4",
        "jest": "^27.4.7",
        "lint-staged": "^13.0.3",
        "passport-custom": "^1.1.1",
        "prettier": "^2.7.1",
        "supertest": "^6.2.4",
        "ts-jest": "^27.1.2",
        "ts-loader": "^9.2.6",
        "ts-node": "^10.4.0",
        "tsconfig-paths": "^4.1.0",
        "typescript": "^4.5.2"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "**/*.(t|j)s": "eslint --cache --fix"
    }
}
